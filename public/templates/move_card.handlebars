<h3>
  Move Card
  <span class="close"><i class="material-icons md-16">close</i></span>
</h3>
<hr/>
<form>
  <dl class="list-name">
    <dt>
      <label>
        <h5>List</h5>
        <p data-id="{{current.attributes.id}}">{{current.attributes.name}}</p>
      </label>
    </dt>
    <dd>
      <select>
        {{#if current}}
        <option data-id="{{current.attributes.id}}" value="{{current.attributes.name}}" selected>{{current.attributes.name}} (current)</option>
        {{/if}}
        {{#each lists}}
        <option data-id="{{attributes.id}}" value="{{attributes.name}}">{{attributes.name}}</option>
        {{/each}}
      </select>
    </dd>
  </dl>
  <dl class="card-position">
    <dt>
      <label>
        <h5>Position</h5>
        <p>{{currentPosition}}</p>
      </label>
    </dt>
    <dd>
      <select>
        {{#if currentPosition}}
        <option value="{{currentPosition}}" selected>{{currentPosition}} (current)</option>
        {{/if}}
        {{#each positions}}
        <option value="{{this}}">{{this}}</option>
        {{/each}}
      </select>
    </dd>
  </dl>
  <input type="submit" value="Move">
</form>
<div class="overlay"></div>
