{{#each items}}
<li data-id="{{id}}">
<section class="comment">
      <h3>User</h3>
      <p>{{content}}</p>
      <form>
        <textarea class="comment-content">{{content}}</textarea>
        <div class="form-controls">
          <input type="submit" value="Save">
          <a class="close" href="#"><i class="material-icons md-30">close</i></a>
          </div>
      </form>
</section>
<footer>{{date}} - <a class="edit" href="#">Edit</a> - <a class="delete" href="#">Delete</a></footer>
</li>
{{/each}}


